@{
    ViewData["Title"] = "Change Password";
}

<head>
    <link rel="stylesheet" href="index.cshtml.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kanit">
</head>

<body style="background-color:#f8f3e3">
    <header>
        <div class=" container-fluid " id="Header">
            <div class="row">
                <div class="col-3">
                    <a href="https://www.picz.in.th/image/yTOkgn"><img src="https://sv1.picz.in.th/images/2023/04/25/yTOkgn.md.png" alt="yTOkgn.png" /></a>
                </div>
                <div class="col-9">
                    <a href="#">UserProfile</a>
                    <a href="#">Log Out</a>
                </div>
            </div>
        </div>
    </header>

    <div class="page">
        <div class="left">
            <div class="container">
                <div class="TXT1">Manage Your Account</div>

                <div class="tab">
                    <button class="tablinks">Profile</button>
                    <button class="tablinks">Password</button>
                </div>

            </div>

        </div>
        <div class="right">
            <div class="container">
                <div class="TXT1"><p>Edit Profile</p></div>
                <div class="success"><p>your profile has been updated !</p></div>
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating col-12">
                        <input class="form-control" placeholder="Please choose your username." disabled />
                        <label class="form-label">Username</label>
                    </div>
                    <div id="firstNameandLast">
                        <div class="form-floating" id="firstNameForm">
                            <input class="form-control" id="firstName" placeholder="Please enter your first name." />
                            <label>Firstname</label>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-floating" id="lastNameForm">
                            <input class="form-control" id="LastName" placeholder="Please enter your last name." />
                            <label>Lastname</label>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-floating col-12">
                        <input class="form-control" placeholder="Please enter your email." />
                        <label class="form-label">Email</label>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 col-12">
                        <input class="form-control" placeholder="Please enter your phone number." />
                        <label class="form-label">Tel.</label>
                        <span class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>

</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}