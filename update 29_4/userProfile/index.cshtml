<body style="background-color:#f8f3e3">
    <header>
        <div class=" container-fluid " id="Header">
            <div class="row">
                <div class="col-3">
                    <a href="https://www.picz.in.th/image/yTOkgn"><img src="https://sv1.picz.in.th/images/2023/04/25/yTOkgn.md.png" alt="yTOkgn.png" /></a>
                </div>
                <div class="col-9">
                    <a href="#">UserProfile</a>
                    <a href="#">Log Out</a>
                </div>
            </div>
        </div>
    </header>

    <div class="page">
        <div class="left">
            <div id="profileBox">
                <div id="TXT1">
                    <h2>User Profile</h2>
                    <a id="editprofile"  title="Manage"><i class="fa-solid fa-pen-to-square" style="color: #ffe6b8;"></i></a>
                </div>
                <div id="display"><img id="profilePic" src="https://drive.google.com/uc?id=1ZSpBKwRLtkALH2bpKr9ObBiDTLz3dNPc" /></div>
                <div id="fullName">
                    <h5>Name Lastname</h5>
                </div>
                <div id="info">
                    <div class="detail"><p>Username : username</p></div>
                    <div class="detail"><p>Tel : 0123456789</p></div>
                    <div class="detail"><p>Email : email@example.com</p></div>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="container">
                <div class="topic">
                    <div class="TXT">Your︎ ︎ ︎ ︎Job</div>
                    <button class="button">Add Job</button>
                </div>
                <div class="box">
                   
                    <ul class="cards">
                        <!-- 1 li class card = 1 order / 1 job-->
                        <li class="card">
                            <div class="orderOwner">
                                <p>Username : username<br />Tel : 0123456789</p>
                            </div>
                            <div class="buttons">
                                <button class="button" style="background: #526FD5; height: 25px; width: 75px; color:white; font-size: 12px;">Confirm</button>
                                <button class="button" style="background: #FF2047; height: 25px; width: 75px; color:white; font-size: 12px;">Cancel</button>
                            </div>
                            <div class="orderInfo">
                                <div class="orderDetails">
                                    <p><b>canteen :</b> canteen<br /><b>store name :</b> store name<br /><b>menu :</b> menu<br /><b>note :</b> note </p>
                                </div>
                                <div class="status">
                                    <div class="rounded-circle">
                                        <p>no order</p>
                                    </div>
                                </div>
                            </div>           
                        </li>

                        <li class="card">
                            <div class="orderOwner">
                                <p>Username : username<br />Tel : 0123456789</p>
                            </div>
                            <div class="buttons">
                                <button class="button" style="background: #526FD5; height: 25px; width: 75px; color:white; font-size: 12px;">Confirm</button>
                                <button class="button" style="background: #FF2047; height: 25px; width: 75px; color:white; font-size: 12px;">Cancel</button>
                            </div>
                            <div class="orderInfo">
                                <div class="orderDetails">
                                    <p><b>canteen :</b> canteen<br /><b>store name :</b> store name<br /><b>menu :</b> menu<br /><b>note :</b> note </p>
                                </div>
                                <div class="status">
                                    <div class="rounded-circle">
                                        <p>no order</p>
                                    </div>
                                </div>
                            </div>           
                        </li>

                        <li class="card">
                            <div class="orderOwner">
                                <p>Username : username<br />Tel : 0123456789</p>
                            </div>
                            <div class="buttons">
                                <button class="button" style="background: #526FD5; height: 25px; width: 75px; color:white; font-size: 12px;">Confirm</button>
                                <button class="button" style="background: #FF2047; height: 25px; width: 75px; color:white; font-size: 12px;">Cancel</button>
                            </div>
                            <div class="orderInfo">
                                <div class="orderDetails">
                                    <p><b>canteen :</b> canteen<br /><b>store name :</b> store name<br /><b>menu :</b> menu<br /><b>note :</b> note </p>
                                </div>
                                <div class="status">
                                    <div class="rounded-circle">
                                        <p>no order</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>            
                </div>
            </div>

            <div class="container">
                <div class="topic">
                    <div class="TXT">Your︎ ︎ ︎ ︎Order</div>
                    <button class="button">Order Food</button>
                </div>
                <div class="box">
                    <div class="zeroStatusTXT">
                        <h3>no  orderer</h3>  <!-- for your job--> <!-- no  order  :  for your oder-->
                    </div>
                </div>
            </div>
        </div>
    </div>

